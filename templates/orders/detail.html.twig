{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.orderNumber }} - B2Battle Electronics{% endblock %}

{% block body %}
<!-- Order Detail Header -->
<section class="py-16 relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 via-transparent to-purple-500/10"></div>
    <div class="absolute top-0 right-1/4 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-0 left-1/4 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
    
    <div class="container mx-auto px-4 relative z-10">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent mb-4">
                Order Details
            </h1>
            <p class="text-xl text-gray-300">
                Order #{{ order.orderNumber }}
            </p>
        </div>

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="max-w-4xl mx-auto mb-8">
                <div class="bg-green-500/20 border border-green-500/50 text-green-300 px-4 py-3 rounded-xl">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="max-w-4xl mx-auto mb-8">
                <div class="bg-red-500/20 border border-red-500/50 text-red-300 px-4 py-3 rounded-xl">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        <!-- Order Details -->
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Order Information -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Order Summary -->
                    <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800">
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                            <i data-lucide="package" class="w-6 h-6 mr-3 text-blue-400"></i>
                            Order Information
                        </h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-4">
                                <div>
                                    <p class="text-gray-400 text-sm">Order Number</p>
                                    <p class="text-white font-semibold text-lg">{{ order.orderNumber }}</p>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-sm">Order Date</p>
                                    <p class="text-white">{{ order.createdAt|date('M d, Y \\a\\t h:i A') }}</p>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-sm">Payment Method</p>
                                    <p class="text-white">{{ order.paymentMethod|upper }}</p>
                                </div>
                            </div>
                            
                            <div class="space-y-4">
                                <div>
                                    <p class="text-gray-400 text-sm">Order Status</p>
                                    <span class="inline-block px-3 py-1 bg-{{ order.statusColor }}-500/20 text-{{ order.statusColor }}-400 rounded-full text-sm font-medium border border-{{ order.statusColor }}-500/30">
                                        {{ order.statusLabel }}
                                    </span>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-sm">Payment Status</p>
                                    <span class="inline-block px-3 py-1 bg-yellow-500/20 text-yellow-400 rounded-full text-sm font-medium border border-yellow-500/30">
                                        {{ order.paymentStatus|title }}
                                    </span>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-sm">Total Amount</p>
                                    <p class="text-2xl font-bold text-green-400">₹{{ order.totalAmount|number_format(2) }}</p>
                                </div>
                            </div>
                        </div>

                        {% if order.notes %}
                            <div class="mt-6 pt-6 border-t border-gray-700">
                                <p class="text-gray-400 text-sm mb-2">Order Notes</p>
                                <p class="text-white bg-gray-800/50 rounded-xl p-4">{{ order.notes }}</p>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Order Items -->
                    <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800">
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                            <i data-lucide="shopping-bag" class="w-6 h-6 mr-3 text-green-400"></i>
                            Order Items ({{ order.orderItems|length }})
                        </h2>

                        <div class="space-y-4">
                            {% for item in order.orderItems %}
                                <div class="bg-gray-800/50 rounded-xl p-4 border border-gray-700">
                                    <div class="flex items-center space-x-4">
                                        <!-- Product Image -->
                                        <div class="flex-shrink-0">
                                            {% if item.productImageUrl %}
                                                <img src="{{ item.productImageUrl }}" alt="{{ item.productName }}" class="w-20 h-20 rounded-lg object-cover">
                                            {% else %}
                                                <div class="w-20 h-20 bg-gray-700 rounded-lg flex items-center justify-center">
                                                    <i data-lucide="image" class="w-8 h-8 text-gray-400"></i>
                                                </div>
                                            {% endif %}
                                        </div>

                                        <!-- Product Details -->
                                        <div class="flex-1">
                                            <h3 class="text-lg font-semibold text-white mb-1">{{ item.productName }}</h3>
                                            <p class="text-gray-400 text-sm mb-2">{{ item.productDescription|slice(0, 100) }}...</p>
                                            <div class="flex items-center justify-between">
                                                <span class="text-blue-400 font-bold">₹{{ item.unitPrice|number_format(2) }} × {{ item.quantity }}</span>
                                                <span class="text-white font-bold text-lg">₹{{ item.totalPrice|number_format(2) }}</span>
                                            </div>
                                        </div>

                                        <!-- Product Actions -->
                                        <div class="flex flex-col space-y-2">
                                            <a href="{{ path('app_product_show', {id: item.product.id}) }}" class="px-3 py-2 bg-blue-500/20 text-blue-400 rounded-lg text-sm font-medium hover:bg-blue-500/30 transition-all duration-300 text-center">
                                                View Product
                                            </a>
                                            <button onclick="addToCart({{ item.product.id }}, {{ item.quantity }})" class="px-3 py-2 bg-green-500/20 text-green-400 rounded-lg text-sm font-medium hover:bg-green-500/30 transition-all duration-300">
                                                Buy Again
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Delivery Information -->
                    <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800">
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                            <i data-lucide="truck" class="w-6 h-6 mr-3 text-purple-400"></i>
                            Delivery Information
                        </h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <h3 class="text-lg font-semibold text-white mb-4">Delivery Address</h3>
                                <div class="bg-gray-800/50 rounded-xl p-4 border border-gray-700">
                                    <p class="text-white font-medium">{{ order.shippingFullName }}</p>
                                    <p class="text-gray-300">{{ order.shippingMobile }}</p>
                                    <p class="text-gray-300 mt-2">{{ order.shippingAddress }}</p>
                                </div>
                            </div>

                            <div>
                                <h3 class="text-lg font-semibold text-white mb-4">Delivery Status</h3>
                                <div class="space-y-3">
                                    <div class="flex items-center space-x-3">
                                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                        <span class="text-white">Order Confirmed</span>
                                        <span class="text-gray-400 text-sm">{{ order.createdAt|date('M d, h:i A') }}</span>
                                    </div>
                                    
                                    {% if order.status != 'cancelled' %}
                                        <div class="flex items-center space-x-3">
                                            <div class="w-3 h-3 {{ order.status in ['processing', 'shipped', 'delivered'] ? 'bg-green-500' : 'bg-gray-500' }} rounded-full"></div>
                                            <span class="text-white">Processing</span>
                                        </div>
                                        
                                        <div class="flex items-center space-x-3">
                                            <div class="w-3 h-3 {{ order.status in ['shipped', 'delivered'] ? 'bg-green-500' : 'bg-gray-500' }} rounded-full"></div>
                                            <span class="text-white">Shipped</span>
                                            {% if order.shippedAt %}
                                                <span class="text-gray-400 text-sm">{{ order.shippedAt|date('M d, h:i A') }}</span>
                                            {% endif %}
                                        </div>
                                        
                                        <div class="flex items-center space-x-3">
                                            <div class="w-3 h-3 {{ order.status == 'delivered' ? 'bg-green-500' : 'bg-gray-500' }} rounded-full"></div>
                                            <span class="text-white">Delivered</span>
                                            {% if order.deliveredAt %}
                                                <span class="text-gray-400 text-sm">{{ order.deliveredAt|date('M d, h:i A') }}</span>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Summary Sidebar -->
                <div class="lg:col-span-1">
                    <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800 sticky top-24">
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                            <i data-lucide="calculator" class="w-6 h-6 mr-3 text-green-400"></i>
                            Order Summary
                        </h2>

                        <div class="space-y-4 mb-6">
                            <div class="flex justify-between text-gray-300">
                                <span>Subtotal ({{ order.orderItems|length }} items)</span>
                                <span>₹{{ order.subtotal|number_format(2) }}</span>
                            </div>
                            
                            <div class="flex justify-between text-gray-300">
                                <span>Tax (GST 18%)</span>
                                <span>₹{{ order.taxAmount|number_format(2) }}</span>
                            </div>
                            
                            <div class="flex justify-between text-gray-300">
                                <span>Shipping</span>
                                {% if order.shippingAmount == '0.00' %}
                                    <span class="text-green-400">FREE</span>
                                {% else %}
                                    <span>₹{{ order.shippingAmount|number_format(2) }}</span>
                                {% endif %}
                            </div>

                            <div class="border-t border-gray-700 pt-4">
                                <div class="flex justify-between text-white text-xl font-bold">
                                    <span>Total Amount</span>
                                    <span>₹{{ order.totalAmount|number_format(2) }}</span>
                                </div>
                            </div>
                        </div>

                        <!-- Order Actions -->
                        <div class="space-y-4">
                            {% if order.canBeCancelled %}
                                <button onclick="showCancelModal('{{ order.orderNumber }}')" class="w-full py-3 bg-red-500/20 text-red-400 rounded-xl font-medium hover:bg-red-500/30 transition-all duration-300">
                                    <i data-lucide="x-circle" class="w-4 h-4 inline mr-2"></i>
                                    Cancel Order
                                </button>
                            {% endif %}
                            
                            <a href="{{ path('app_orders') }}" class="w-full py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white font-medium hover:bg-gray-700/50 transition-all duration-300 text-center block">
                                <i data-lucide="arrow-left" class="w-4 h-4 inline mr-2"></i>
                                Back to Orders
                            </a>
                            
                            <a href="{{ path('app_products') }}" class="w-full py-3 bg-blue-500/20 text-blue-400 rounded-xl font-medium hover:bg-blue-500/30 transition-all duration-300 text-center block">
                                <i data-lucide="shopping-cart" class="w-4 h-4 inline mr-2"></i>
                                Continue Shopping
                            </a>
                        </div>

                        <!-- Order Timeline -->
                        <div class="mt-8 pt-6 border-t border-gray-700">
                            <h3 class="text-lg font-semibold text-white mb-4">Order Timeline</h3>
                            <div class="space-y-3 text-sm">
                                <div class="flex items-center space-x-3">
                                    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                                    <span class="text-white">Order Placed</span>
                                    <span class="text-gray-400">{{ order.createdAt|date('M d, h:i A') }}</span>
                                </div>
                                
                                {% if order.status != 'cancelled' %}
                                    <div class="flex items-center space-x-3">
                                        <div class="w-2 h-2 {{ order.status in ['processing', 'shipped', 'delivered'] ? 'bg-green-500' : 'bg-gray-500' }} rounded-full"></div>
                                        <span class="text-white">Processing Started</span>
                                    </div>
                                    
                                    {% if order.shippedAt %}
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                                            <span class="text-white">Shipped</span>
                                            <span class="text-gray-400">{{ order.shippedAt|date('M d, h:i A') }}</span>
                                        </div>
                                    {% endif %}
                                    
                                    {% if order.deliveredAt %}
                                        <div class="flex items-center space-x-3">
                                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                                            <span class="text-white">Delivered</span>
                                            <span class="text-gray-400">{{ order.deliveredAt|date('M d, h:i A') }}</span>
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <div class="flex items-center space-x-3">
                                        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                                        <span class="text-red-400">Order Cancelled</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Information -->
                <div class="lg:col-span-1">
                    <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800">
                        <h2 class="text-xl font-bold text-white mb-6 flex items-center">
                            <i data-lucide="user" class="w-5 h-5 mr-3 text-purple-400"></i>
                            Customer Details
                        </h2>

                        <div class="space-y-4">
                            <div>
                                <p class="text-gray-400 text-sm">Customer Name</p>
                                <p class="text-white font-medium">{{ order.user.fullName }}</p>
                            </div>
                            <div>
                                <p class="text-gray-400 text-sm">Email</p>
                                <p class="text-white">{{ order.user.email }}</p>
                            </div>
                            <div>
                                <p class="text-gray-400 text-sm">Mobile</p>
                                <p class="text-white">+91 {{ order.shippingMobile }}</p>
                            </div>
                        </div>

                        <div class="mt-6 pt-6 border-t border-gray-700">
                            <h3 class="text-lg font-semibold text-white mb-4">Delivery Address</h3>
                            <div class="bg-gray-800/50 rounded-xl p-4 border border-gray-700">
                                <p class="text-white font-medium">{{ order.shippingFullName }}</p>
                                <p class="text-gray-300 mt-1">{{ order.shippingAddress }}</p>
                            </div>
                        </div>

                        {% if order.status != 'cancelled' and order.status != 'delivered' %}
                            <div class="mt-6 bg-blue-500/20 border border-blue-500/50 rounded-xl p-4">
                                <div class="flex items-center space-x-2 text-blue-300 text-sm font-medium mb-2">
                                    <i data-lucide="info" class="w-4 h-4"></i>
                                    <span>Delivery Information</span>
                                </div>
                                <ul class="text-blue-200 text-xs space-y-1">
                                    <li>• Expected delivery: 2-3 business days</li>
                                    <li>• You'll receive SMS updates</li>
                                    <li>• Contact support for any issues</li>
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Cancel Order Modal -->
<div id="cancelModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center" style="display: none;">
    <div class="bg-gray-900 rounded-2xl p-8 border border-gray-700 max-w-md w-full mx-4">
        <div class="text-center">
            <div class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <i data-lucide="alert-triangle" class="w-8 h-8 text-red-400"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Cancel Order</h3>
            <p class="text-gray-300 mb-6">Are you sure you want to cancel this order? This action cannot be undone.</p>
            
            <div class="flex space-x-4">
                <button onclick="hideCancelModal()" class="flex-1 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white font-medium hover:bg-gray-700/50 transition-all duration-300">
                    Keep Order
                </button>
                <button onclick="confirmCancelOrder()" class="flex-1 py-3 bg-red-500 rounded-xl text-white font-medium hover:bg-red-600 transition-all duration-300">
                    Cancel Order
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let currentOrderNumber = '';

document.addEventListener('DOMContentLoaded', function() {
    // Initialize Lucide icons
    lucide.createIcons();
});

function showCancelModal(orderNumber) {
    currentOrderNumber = orderNumber;
    document.getElementById('cancelModal').style.display = 'flex';
    document.body.style.overflow = 'hidden';
}

function hideCancelModal() {
    document.getElementById('cancelModal').style.display = 'none';
    document.body.style.overflow = 'auto';
    currentOrderNumber = '';
}

function confirmCancelOrder() {
    if (!currentOrderNumber) {
        alert('No order selected');
        return;
    }

    fetch(`/orders/${currentOrderNumber}/cancel`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        hideCancelModal();
        if (data.success) {
            showNotification('Order cancelled successfully', 'success');
            setTimeout(() => {
                location.reload();
            }, 1500);
        } else {
            showNotification(data.message || 'Failed to cancel order', 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        hideCancelModal();
        showNotification('An error occurred while cancelling the order', 'error');
    });
}

// Close modal when clicking outside
document.addEventListener('click', function(e) {
    const modal = document.getElementById('cancelModal');
    if (e.target === modal) {
        hideCancelModal();
    }
});
</script>
{% endblock %}
