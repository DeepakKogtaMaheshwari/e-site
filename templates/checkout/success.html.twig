{% extends 'base.html.twig' %}

{% block title %}Success! Payment Successful - B2Battle{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="modern-card text-center p-5" data-aos="zoom-in">
                <!-- Success Animation -->
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle floating"
                         style="width: 120px; height: 120px; background: var(--success-gradient); box-shadow: 0 0 50px rgba(17, 153, 142, 0.3);">
                        <i class="bi bi-check-circle-fill text-white" style="font-size: 4rem;"></i>
                    </div>
                </div>

                <!-- Success Message -->
                <h1 class="text-white mb-3 brand-font">
                    <i class="bi bi-trophy-fill me-2"></i>Victory Achieved!
                </h1>
                <h4 class="text-success mb-4">Payment Successful!</h4>
                <p class="text-white-50 mb-4 fs-5">
                    ðŸ“¦ Your electronics are on their way! Get ready to enhance your productivity with your new equipment.
                </p>

                {% if payment_id %}
                <div class="modern-card p-3 mb-4" style="background: rgba(0, 0, 0, 0.2);">
                    <div class="row g-2 text-start">
                        <div class="col-md-6">
                            <strong class="text-white">Payment ID:</strong><br>
                            <code class="text-success">{{ payment_id }}</code>
                        </div>
                        {% if order_id %}
                        <div class="col-md-6">
                            <strong class="text-white">Order ID:</strong><br>
                            <code class="text-success">{{ order_id }}</code>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}

                <!-- Order Status -->
                <div class="mb-4">
                    <h5 class="text-white mb-3">
                        <i class="bi bi-list-check me-2"></i>Your Order Status
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.2rem;"></i>
                                <div class="text-start">
                                    <div class="text-white fw-bold">Order Confirmed</div>
                                    <small class="text-white-50">Payment processed successfully</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.2rem;"></i>
                                <div class="text-start">
                                    <div class="text-white fw-bold">Email Sent</div>
                                    <small class="text-white-50">Confirmation in your inbox</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-hourglass-split text-warning me-3" style="font-size: 1.2rem;"></i>
                                <div class="text-start">
                                    <div class="text-white fw-bold">Preparing</div>
                                    <small class="text-white-50">Products being prepared for shipping</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-truck text-info me-3" style="font-size: 1.2rem;"></i>
                                <div class="text-start">
                                    <div class="text-white fw-bold">Express Delivery</div>
                                    <small class="text-white-50">24-48 hours to your doorstep</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="{{ path('app_products') }}" class="btn btn-modern btn-lg">
                        <i class="bi bi-grid-3x3-gap-fill me-2"></i>
                        Continue Shopping
                    </a>
                    <a href="{{ path('app_home') }}" class="btn btn-outline-light btn-lg rounded-pill">
                        <i class="bi bi-house-fill me-2"></i>
                        Return to Base
                    </a>
                </div>

                <!-- Additional Info -->
                <div class="mt-4 pt-4" style="border-top: 1px solid rgba(255, 255, 255, 0.2);">
                    <h6 class="text-white mb-3">
                        <i class="bi bi-gift-fill me-2"></i>Exclusive Benefits
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-award-fill text-warning mb-2" style="font-size: 1.5rem;"></i>
                                <div class="text-white-50 small">1 Year Warranty</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-people-fill text-info mb-2" style="font-size: 1.5rem;"></i>
                                <div class="text-white-50 small">Customer Community Access</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-headset text-success mb-2" style="font-size: 1.5rem;"></i>
                                <div class="text-white-50 small">Priority Support</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

.floating {
    animation: pulse 2s ease-in-out infinite;
}
</style>
{% endblock %}
