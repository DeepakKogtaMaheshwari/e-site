{% extends 'base.html.twig' %}

{% block title %}Secure Checkout - {{ product.name }} | B2Battle{% endblock %}

{% block body %}
<!-- Ultra Modern Checkout Header -->
<section class="py-16 relative overflow-hidden">
    <!-- Background Effects -->
