{% block javascripts %}
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
// Initialize Lucide Icons
lucide.createIcons();

document.getElementById('rzp-button').onclick = function(e) {
    e.preventDefault();

    // Add modern loading state
    const button = e.target.closest('button');
    const originalContent = button.innerHTML;

    // Loading animation
    button.innerHTML = `
        <span class="flex items-center justify-center space-x-3">
            <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
            <span>Processing Payment...</span>
        </span>
    `;
    button.disabled = true;
    button.classList.add('opacity-75');

    // Get current quantity and calculate total with all charges
    const currentQuantity = parseInt(document.getElementById('quantity-display')?.textContent) || 1;
    const baseAmount = {{ product.price }} * currentQuantity;
    const tax = baseAmount * 0.18;
    const shipping = baseAmount >= 5000 ? 0 : 299;
    const finalAmount = baseAmount + tax + shipping;

    // Use dynamic amount if available
    const paymentAmount = window.currentPaymentAmount || Math.round(finalAmount * 100);

    var options = {
        "key": "{{ razorpay_key_id }}",
        "amount": paymentAmount, // Amount in paise (includes tax and shipping)
        "currency": "INR",
        "name": "B2Battle Electronics",
        "description": "{{ product.name }} - Professional Electronics (Qty: " + currentQuantity + ")",
        "image": "{{ product.imageUrl ?? '' }}",
        "order_id": "", // This should be generated from your backend
        "handler": function (response) {
            // Payment successful animation
            button.innerHTML = `
                <span class="flex items-center justify-center space-x-3">
                    <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>Payment Successful!</span>
                </span>
            `;
            button.className = 'w-full py-4 bg-gradient-to-r from-green-500 to-green-600 rounded-2xl text-white font-bold text-lg transition-all duration-300';

            // Confetti effect (simple)
            for (let i = 0; i < 50; i++) {
                createConfetti();
            }

            setTimeout(() => {
                window.location.href = "{{ path('app_payment_success') }}?payment_id=" + response.razorpay_payment_id + "&order_id=" + (response.razorpay_order_id || '');
            }, 2000);
        },
        "prefill": {
            "name": "Customer",
            "email": "bittuminati99@gmail.com",
            "contact": "9801483755"
        },
        "notes": {
            "product_id": "B2B{{ product.id }}",
            "product_name": "{{ product.name }}",
            "store": "B2Battle - Next-Gen Gaming Arsenal",
            "category": "Professional Gaming Equipment",
            "customer_type": "Champion"
        },
        "theme": {
            "color": "#8b5cf6",
            "backdrop_color": "rgba(0, 0, 0, 0.9)"
        },
        "modal": {
            "ondismiss": function() {
                // Reset button state with animation
                button.innerHTML = originalContent;
                button.disabled = false;
                button.classList.remove('opacity-75');
                button.className = 'w-full py-4 bg-gradient-to-r from-neon-purple to-neon-pink rounded-2xl text-white font-bold text-lg hover:shadow-neon-lg transition-all duration-300 group';

                // Re-initialize icons
                lucide.createIcons();

                // Payment cancelled
                setTimeout(() => {
                    window.location.href = "{{ path('app_payment_failed') }}?error=Payment cancelled by user";
                }, 500);
            },
            "confirm_close": true,
            "escape": false
        },
        "retry": {
            "enabled": true,
            "max_count": 3
        }
    };

    var rzp = new Razorpay(options);

    rzp.on('payment.failed', function (response) {
        // Payment failed animation
        button.innerHTML = `
            <span class="flex items-center justify-center space-x-3">
                <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Payment Failed</span>
            </span>
        `;
        button.className = 'w-full py-4 bg-gradient-to-r from-red-500 to-red-600 rounded-2xl text-white font-bold text-lg transition-all duration-300';

        setTimeout(() => {
            window.location.href = "{{ path('app_payment_failed') }}?error=" + encodeURIComponent(response.error.description);
        }, 2000);
    });

    rzp.open();
};

// Confetti animation function
function createConfetti() {
    const confetti = document.createElement('div');
    confetti.style.position = 'fixed';
    confetti.style.left = Math.random() * 100 + 'vw';
    confetti.style.top = '-10px';
    confetti.style.width = '10px';
    confetti.style.height = '10px';
    confetti.style.backgroundColor = ['#8b5cf6', '#f472b6', '#10b981', '#f59e0b'][Math.floor(Math.random() * 4)];
    confetti.style.borderRadius = '50%';
    confetti.style.pointerEvents = 'none';
    confetti.style.zIndex = '9999';
    confetti.style.animation = 'fall 3s linear forwards';

    document.body.appendChild(confetti);

    setTimeout(() => {
        confetti.remove();
    }, 3000);
}

// Add CSS for confetti animation
const style = document.createElement('style');
style.textContent = `
    @keyframes fall {
        to {
            transform: translateY(100vh) rotate(360deg);
        }
    }
`;
document.head.appendChild(style);

// Enhanced Checkout Functionality
document.addEventListener('DOMContentLoaded', function() {
    // Enhanced Quantity Controls with Real-time Updates
    const quantityDisplay = document.getElementById('quantity-display');
    const minusBtn = document.getElementById('quantity-minus');
    const plusBtn = document.getElementById('quantity-plus');
    const stockStatus = document.getElementById('stock-status');

    let quantity = 1;
    const maxQuantity = {{ random(5, 20) }};
    const basePrice = {{ product.price }};
    const productName = "{{ product.name|e('js') }}";

    // Enhanced quantity update with comprehensive price calculation
    function updateQuantityAndPricing() {
        // Update quantity display
        quantityDisplay.textContent = quantity;

        // Update button states
        minusBtn.disabled = quantity <= 1;
        plusBtn.disabled = quantity >= maxQuantity;

        // Update stock status with dynamic messaging
        const remaining = maxQuantity - quantity + 1;
        if (remaining <= 3) {
            stockStatus.innerHTML = `⚠️ Only ${remaining} left!`;
            stockStatus.className = 'text-red-400 font-semibold animate-pulse';
        } else if (remaining <= 5) {
            stockStatus.innerHTML = `⚡ ${remaining} available`;
            stockStatus.className = 'text-yellow-400 font-semibold';
        } else {
            stockStatus.innerHTML = `✓ ${remaining} available`;
            stockStatus.className = 'text-gray-400';
        }

        // Calculate all pricing
        const subtotal = basePrice * quantity;
        const tax = subtotal * 0.18;
        const shipping = subtotal >= 5000 ? 0 : 299;
        const finalTotal = subtotal + tax + shipping;

        // Update all price displays
        updatePriceDisplays(subtotal, tax, shipping, finalTotal);

        // Update Razorpay amount for payment
        updatePaymentAmount(finalTotal);

        // Show update notification
        if (window.B2Battle?.notifications) {
            window.B2Battle.notifications.show(
                `Updated: ${quantity}x ${productName} = ₹${finalTotal.toLocaleString()}`,
                'info'
            );
        }
    }

    function updatePriceDisplays(subtotal, tax, shipping, finalTotal) {
        // Update item total
        const itemTotal = document.getElementById('item-total');
        if (itemTotal) {
            itemTotal.textContent = `₹${subtotal.toLocaleString()}`;
        }

        // Update subtotal
        const subtotalElement = document.getElementById('subtotal-amount');
        if (subtotalElement) {
            subtotalElement.textContent = `₹${subtotal.toLocaleString()}`;
        }

        // Update tax
        const taxElement = document.getElementById('tax-amount');
        if (taxElement) {
            taxElement.textContent = `₹${tax.toLocaleString()}`;
        }

        // Update shipping
        const shippingElement = document.getElementById('shipping-amount');
        if (shippingElement) {
            if (shipping === 0) {
                shippingElement.innerHTML = '<span class="text-green-400">FREE</span>';
            } else {
                shippingElement.textContent = `₹${shipping.toLocaleString()}`;
            }
        }

        // Update final total
        const finalTotalElement = document.getElementById('final-total');
        if (finalTotalElement) {
            finalTotalElement.textContent = `₹${finalTotal.toLocaleString()}`;
        }
    }

    function updatePaymentAmount(finalTotal) {
        // Update the global payment amount for Razorpay
        window.currentPaymentAmount = Math.round(finalTotal * 100); // Convert to paise
    }

    // Event listeners with enhanced feedback
    if (minusBtn && plusBtn) {
        minusBtn.addEventListener('click', function() {
            if (quantity > 1) {
                quantity--;
                updateQuantityAndPricing();

                // Visual feedback
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 150);
            }
        });

        plusBtn.addEventListener('click', function() {
            if (quantity < maxQuantity) {
                quantity++;
                updateQuantityAndPricing();

                // Visual feedback
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 150);
            } else {
                // Show max quantity reached
                if (window.B2Battle?.notifications) {
                    window.B2Battle.notifications.show('Maximum quantity reached', 'warning');
                }
            }
        });

        // Initialize pricing
        updateQuantityAndPricing();
    }

    function updateTotal() {
        const quantity = parseInt(quantitySpan.textContent) || 1;
        const basePrice = {{ product.price }};
        const totalPrice = basePrice * quantity;

        // Update the displayed total price
        const totalElement = document.querySelector('.text-4xl.font-bold');
        if (totalElement) {
            totalElement.innerHTML = `
                <span class="bg-gradient-to-r from-neon-green to-neon-blue bg-clip-text text-transparent">
                    ₹${totalPrice.toLocaleString()}
                </span>
            `;
        }

        // Update subtotal if exists
        const subtotalElement = document.querySelector('.text-2xl.font-bold.text-white');
        if (subtotalElement && subtotalElement.textContent.includes('₹')) {
            subtotalElement.textContent = `₹${totalPrice.toLocaleString()}`;
        }

        // Show notification
        showNotification(`Total updated: ₹${totalPrice.toLocaleString()}`, 'info');
    }

    // Notification function for checkout
    function showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.className = `fixed top-20 right-4 z-50 px-6 py-3 rounded-xl text-white font-semibold transform translate-x-full transition-transform duration-300`;

        switch(type) {
            case 'success':
                notification.style.background = 'linear-gradient(135deg, #10b981, #059669)';
                break;
            case 'warning':
                notification.style.background = 'linear-gradient(135deg, #f59e0b, #d97706)';
                break;
            case 'error':
                notification.style.background = 'linear-gradient(135deg, #ef4444, #dc2626)';
                break;
            default:
                notification.style.background = 'linear-gradient(135deg, #8b5cf6, #7c3aed)';
        }

        notification.textContent = message;
        document.body.appendChild(notification);

        // Animate in
        setTimeout(() => {
            notification.style.transform = 'translateX(0)';
        }, 100);

        // Animate out and remove
        setTimeout(() => {
            notification.style.transform = 'translateX(full)';
            setTimeout(() => {
                if (document.body.contains(notification)) {
                    document.body.removeChild(notification);
                }
            }, 300);
        }, 3000);
    }

    // Add glow effect to payment button
    const payButton = document.getElementById('rzp-button');
    if (payButton) {
        setInterval(() => {
            payButton.style.boxShadow = '0 0 30px rgba(139, 92, 246, 0.5)';
            setTimeout(() => {
                payButton.style.boxShadow = '0 0 20px rgba(139, 92, 246, 0.3)';
            }, 1500);
        }, 4000);
    }
});
</script>
