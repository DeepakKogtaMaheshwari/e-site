        <!-- Essential Functions - Load First -->
        <script>
            // Define essential functions immediately
            window.addToCart = function(productId, quantity = 1) {
                console.log('üõí Adding to cart:', productId, 'quantity:', quantity);

                // Show loading notification
                if (window.showNotification) {
                    window.showNotification('Adding to cart...', 'info');
                }

                fetch(`/cart/add/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: `quantity=${quantity}`
                })
                .then(response => {
                    console.log('üõí Response status:', response.status);
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('üõí Cart response:', data);
                    if (data.success) {
                        if (window.updateCartCount) {
                            window.updateCartCount();
                        }
                        if (window.showNotification) {
                            window.showNotification(data.message || 'Product added to cart!', 'success');
                        }
                    } else {
                        if (window.showNotification) {
                            window.showNotification(data.message || 'Failed to add product to cart', 'error');
                        }
                    }
                })
                .catch(error => {
                    console.error('üõí Error adding to cart:', error);
                    if (window.showNotification) {
                        window.showNotification('Failed to add item to cart. Please try again.', 'error');
                    }
                });
            };

            // Update cart count function
            window.updateCartCount = function() {
                console.log('üõí Updating cart count...');
                fetch('/cart/count')
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('üõí Cart count data:', data);
                        const cartCountElements = document.querySelectorAll('.cart-count');
                        console.log('üõí Found cart count elements:', cartCountElements.length);

                        cartCountElements.forEach(cartCount => {
                            if (data.count > 0) {
                                cartCount.textContent = data.count;
                                cartCount.style.display = 'flex';
                            } else {
                                cartCount.style.display = 'none';
                            }
                        });

                        if (cartCountElements.length === 0) {
                            console.warn('üõí No cart count elements found');
                        }
                    })
                    .catch(error => console.error('üõí Error updating cart count:', error));
            };

            // Show notification function
            window.showNotification = function(message, type = 'info') {
                console.log('üì¢ Showing notification:', message, type);

                const notification = document.createElement('div');
                notification.className = `fixed top-4 right-4 z-50 px-6 py-4 rounded-xl text-white font-medium transform translate-x-full transition-transform duration-300 ${
                    type === 'success' ? 'bg-green-500' :
                    type === 'error' ? 'bg-red-500' :
                    'bg-blue-500'
                }`;
                notification.textContent = message;

                document.body.appendChild(notification);

                // Slide in
                setTimeout(() => {
                    notification.style.transform = 'translateX(0)';
                }, 100);

                // Slide out and remove
                setTimeout(() => {
                    notification.style.transform = 'translateX(100%)';
                    setTimeout(() => {
                        if (document.body.contains(notification)) {
                            document.body.removeChild(notification);
                        }
                    }, 300);
                }, 3000);
            };

            // Server-side wishlist functionality
            window.toggleWishlist = function(productId) {
                console.log('‚ù§Ô∏è Toggling wishlist for product:', productId);

                fetch(`/wishlist/toggle/${productId}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.showNotification(data.message, data.in_wishlist ? 'success' : 'info');
                        updateWishlistButton(productId, data.in_wishlist);
                    } else {
                        window.showNotification(data.message || 'Failed to update wishlist', 'error');
                    }
                })
                .catch(error => {
                    console.error('‚ù§Ô∏è Error toggling wishlist:', error);
                    window.showNotification('Failed to update wishlist', 'error');
                });
            };

            // Update single wishlist button
            function updateWishlistButton(productId, inWishlist) {
                document.querySelectorAll(`[data-wishlist-id="${productId}"]`).forEach(button => {
                    const icon = button.querySelector('[data-lucide="heart"]');

                    if (inWishlist) {
                        button.classList.add('text-red-500');
                        button.classList.remove('text-gray-400');
                        if (icon) {
                            icon.style.fill = 'currentColor';
                        }
                    } else {
                        button.classList.remove('text-red-500');
                        button.classList.add('text-gray-400');
                        if (icon) {
                            icon.style.fill = 'none';
                        }
                    }
                });
            }

            // Update wishlist icons (placeholder for now)
            window.updateWishlistIcons = function() {
                // This would need to fetch wishlist status from server
                // For now, we'll just re-initialize icons
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }
            };

            // Search functionality
            window.performSearch = function(query) {
                console.log('üîç Searching for:', query);
                if (query.trim()) {
                    window.location.href = `/products/search?q=${encodeURIComponent(query.trim())}`;
                }
            };

            // Simple icon initialization
            document.addEventListener('DOMContentLoaded', function() {
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }

                // Initialize cart count and wishlist on page load
                console.log('üõí Page loaded, initializing cart count and wishlist...');
                initializePageFeatures();
            });

            // Also initialize on window load as backup
            window.addEventListener('load', function() {
                initializePageFeatures();
            });

            // Initialize page features function
            function initializePageFeatures() {
                if (window.updateCartCount) {
                    window.updateCartCount();
                } else {
                    console.error('üõí updateCartCount function not found');
                }

                if (window.updateWishlistIcons) {
                    window.updateWishlistIcons();
                }

                // Re-initialize icons
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }
            }
        </script>

