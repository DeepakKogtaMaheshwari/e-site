{% extends 'base.html.twig' %}

{% block title %}My Orders - {{ user.fullName }} | B2Battle{% endblock %}

{% block body %}
<!-- Orders Header -->
<section class="py-16 relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 via-transparent to-purple-500/10"></div>
    <div class="absolute top-0 left-1/4 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
    
    <div class="container mx-auto px-4 relative z-10">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent mb-4">
                My Orders
            </h1>
            <p class="text-xl text-gray-300">
                Track your purchases and order history
            </p>
        </div>

        <!-- Order Stats -->
        <div class="max-w-6xl mx-auto mb-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 rounded-xl flex items-center justify-center">
                            <i data-lucide="package" class="w-6 h-6 text-white"></i>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Total Orders</p>
                            <p class="text-2xl font-bold text-white">{{ total_orders }}</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-blue-500 rounded-xl flex items-center justify-center">
                            <i data-lucide="indian-rupee" class="w-6 h-6 text-white"></i>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Total Spent</p>
                            <p class="text-2xl font-bold text-white">₹{{ total_spent|number_format(2) }}</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl p-6 border border-gray-800">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center">
                            <i data-lucide="star" class="w-6 h-6 text-white"></i>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Member Since</p>
                            <p class="text-lg font-bold text-white">{{ user.createdAt|date('M Y') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders List -->
        <div class="max-w-6xl mx-auto">
            {% if orders is empty %}
                <!-- No Orders -->
                <div class="bg-gray-900/80 backdrop-blur-xl rounded-3xl p-12 border border-gray-800 text-center">
                    <div class="w-24 h-24 bg-gradient-to-r from-gray-600 to-gray-700 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i data-lucide="shopping-bag" class="w-12 h-12 text-gray-400"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4">No Orders Yet</h3>
                    <p class="text-gray-400 mb-8">You haven't placed any orders yet. Start shopping to see your order history here.</p>
                    <a href="{{ path('app_products') }}" class="inline-flex items-center space-x-2 px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-500 rounded-2xl text-white font-bold hover:shadow-lg hover:shadow-blue-500/25 transition-all duration-300 transform hover:scale-105">
                        <i data-lucide="shopping-cart" class="w-5 h-5"></i>
                        <span>Start Shopping</span>
                    </a>
                </div>
            {% else %}
                <!-- Orders Grid -->
                <div class="space-y-6">
                    {% for order in orders %}
                        <div class="bg-gray-900/80 backdrop-blur-xl rounded-2xl border border-gray-800 overflow-hidden hover:border-blue-500/50 transition-all duration-300">
                            <div class="p-6">
                                <!-- Order Header -->
                                <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-4">
                                    <div class="flex items-center space-x-4 mb-4 lg:mb-0">
                                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 rounded-xl flex items-center justify-center">
                                            <i data-lucide="package" class="w-6 h-6 text-white"></i>
                                        </div>
                                        <div>
                                            <h3 class="text-lg font-bold text-white">Order #{{ order.orderNumber }}</h3>
                                            <p class="text-gray-400 text-sm">{{ order.createdAt|date('M d, Y \\a\\t h:i A') }}</p>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center space-x-4">
                                        <span class="px-3 py-1 bg-{{ order.statusColor }}-500/20 text-{{ order.statusColor }}-400 rounded-full text-sm font-medium border border-{{ order.statusColor }}-500/30">
                                            {{ order.statusLabel }}
                                        </span>
                                        <span class="text-xl font-bold text-white">₹{{ order.totalAmount|number_format(2) }}</span>
                                    </div>
                                </div>

                                <!-- Order Items Preview -->
                                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
                                    <div>
                                        <p class="text-gray-400 text-sm mb-2">Items ({{ order.orderItems|length }})</p>
                                        <div class="space-y-2">
                                            {% for item in order.orderItems|slice(0, 2) %}
                                                <div class="flex items-center space-x-3">
                                                    {% if item.productImageUrl %}
                                                        <img src="{{ item.productImageUrl }}" alt="{{ item.productName }}" class="w-10 h-10 rounded-lg object-cover">
                                                    {% else %}
                                                        <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center">
                                                            <i data-lucide="image" class="w-5 h-5 text-gray-400"></i>
                                                        </div>
                                                    {% endif %}
                                                    <div class="flex-1">
                                                        <p class="text-white text-sm font-medium">{{ item.productName }}</p>
                                                        <p class="text-gray-400 text-xs">Qty: {{ item.quantity }} × ₹{{ item.unitPrice|number_format(2) }}</p>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                            {% if order.orderItems|length > 2 %}
                                                <p class="text-gray-400 text-sm">+ {{ order.orderItems|length - 2 }} more items</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    <div>
                                        <p class="text-gray-400 text-sm mb-2">Delivery Address</p>
                                        <div class="text-white text-sm">
                                            <p class="font-medium">{{ order.shippingFullName }}</p>
                                            <p class="text-gray-400">{{ order.shippingMobile }}</p>
                                            <p class="text-gray-400">{{ order.shippingCity }}, {{ order.shippingState }} - {{ order.shippingPostalCode }}</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Order Actions -->
                                <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-700">
                                    <a href="{{ path('app_order_detail', {'orderNumber': order.orderNumber}) }}" class="flex-1 py-2 px-4 bg-blue-500/20 text-blue-400 rounded-xl text-center font-medium hover:bg-blue-500/30 transition-all duration-300">
                                        View Details
                                    </a>
                                    
                                    {% if order.canBeCancelled %}
                                        <button onclick="showCancelModal('{{ order.orderNumber }}')" class="flex-1 py-2 px-4 bg-red-500/20 text-red-400 rounded-xl font-medium hover:bg-red-500/30 transition-all duration-300">
                                            Cancel Order
                                        </button>
                                    {% endif %}
                                    
                                    <a href="{{ path('app_products') }}" class="flex-1 py-2 px-4 bg-green-500/20 text-green-400 rounded-xl text-center font-medium hover:bg-green-500/30 transition-all duration-300">
                                        Order Again
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- View All Orders Link -->
                {% if orders|length >= 10 %}
                    <div class="text-center mt-8">
                        <a href="{{ path('app_orders') }}" class="inline-flex items-center space-x-2 px-6 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white font-medium hover:bg-gray-700/50 transition-all duration-300">
                            <span>View All Orders</span>
                            <i data-lucide="arrow-right" class="w-4 h-4"></i>
                        </a>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</section>

<!-- Cancel Order Modal -->
<div id="cancelModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center" style="display: none;">
    <div class="bg-gray-900 rounded-2xl p-8 border border-gray-700 max-w-md w-full mx-4">
        <div class="text-center">
            <div class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <i data-lucide="alert-triangle" class="w-8 h-8 text-red-400"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Cancel Order</h3>
            <p class="text-gray-300 mb-6">Are you sure you want to cancel this order? This action cannot be undone.</p>

            <div class="flex space-x-4">
                <button onclick="hideCancelModal()" class="flex-1 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white font-medium hover:bg-gray-700/50 transition-all duration-300">
                    Keep Order
                </button>
                <button onclick="confirmCancelOrder()" class="flex-1 py-3 bg-red-500 rounded-xl text-white font-medium hover:bg-red-600 transition-all duration-300">
                    Cancel Order
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let currentOrderNumber = '';

document.addEventListener('DOMContentLoaded', function() {
    // Initialize Lucide icons
    lucide.createIcons();
});

function showCancelModal(orderNumber) {
    currentOrderNumber = orderNumber;
    document.getElementById('cancelModal').style.display = 'flex';
    document.body.style.overflow = 'hidden';

    // Re-initialize icons in modal
    setTimeout(() => {
        lucide.createIcons();
    }, 100);
}

function hideCancelModal() {
    document.getElementById('cancelModal').style.display = 'none';
    document.body.style.overflow = 'auto';
    currentOrderNumber = '';
}

function confirmCancelOrder() {
    if (!currentOrderNumber) {
        showNotification('No order selected', 'error');
        return;
    }

    fetch(`/orders/${currentOrderNumber}/cancel`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        hideCancelModal();
        if (data.success) {
            showNotification('Order cancelled successfully', 'success');
            setTimeout(() => {
                location.reload();
            }, 1500);
        } else {
            showNotification(data.message || 'Failed to cancel order', 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        hideCancelModal();
        showNotification('An error occurred while cancelling the order', 'error');
    });
}

// Close modal when clicking outside
document.addEventListener('click', function(e) {
    const modal = document.getElementById('cancelModal');
    if (e.target === modal) {
        hideCancelModal();
    }
});
</script>
{% endblock %}
