{% extends 'base.html.twig' %}

{% block title %}My Profile - {{ user.fullName }} | B2Battle{% endblock %}

{% block body %}
<!-- Profile Header -->
<section class="py-16 relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 via-transparent to-neon-green/10"></div>
    <div class="absolute top-0 left-1/4 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-neon-green/20 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
    
    <div class="container mx-auto px-4 relative z-10">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-purple-400 to-neon-green bg-clip-text text-transparent mb-4">
                My Profile
            </h1>
            <p class="text-xl text-gray-300">
                Welcome back, {{ user.firstName }}!
            </p>
        </div>

        <!-- Profile Content -->
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Profile Sidebar -->
                <div class="lg:col-span-1">
                    <div class="bg-gray-900/80 backdrop-blur-xl rounded-3xl p-6 border border-gray-800 shadow-2xl">
                        <!-- Profile Avatar -->
                        <div class="text-center mb-6">
                            <div class="w-24 h-24 bg-gradient-to-r from-purple-500 to-neon-green rounded-full flex items-center justify-center mx-auto mb-4">
                                <span class="text-3xl font-bold text-black">{{ user.firstName|first|upper }}{{ user.lastName|first|upper }}</span>
                            </div>
                            <h3 class="text-xl font-semibold text-white">{{ user.fullName }}</h3>
                            <p class="text-gray-400">{{ user.email }}</p>
                        </div>

                        <!-- Profile Navigation -->
                        <nav class="space-y-2">
                            <a href="{{ path('app_profile') }}" class="flex items-center space-x-3 px-4 py-3 bg-gradient-to-r from-purple-500/20 to-neon-green/20 rounded-xl text-white font-medium">
                                <i data-lucide="user" class="w-5 h-5"></i>
                                <span>Profile Overview</span>
                            </a>
                            <a href="{{ path('app_profile_edit') }}" class="flex items-center space-x-3 px-4 py-3 text-gray-300 hover:bg-gray-800/50 rounded-xl transition-all duration-300">
                                <i data-lucide="edit" class="w-5 h-5"></i>
                                <span>Edit Profile</span>
                            </a>
                            <a href="{{ path('app_profile_orders') }}" class="flex items-center space-x-3 px-4 py-3 text-gray-300 hover:bg-gray-800/50 rounded-xl transition-all duration-300">
                                <i data-lucide="package" class="w-5 h-5"></i>
                                <span>Order History</span>
                            </a>
                            <a href="{{ path('app_profile_addresses') }}" class="flex items-center space-x-3 px-4 py-3 text-gray-300 hover:bg-gray-800/50 rounded-xl transition-all duration-300">
                                <i data-lucide="map-pin" class="w-5 h-5"></i>
                                <span>Addresses</span>
                            </a>
                            <a href="{{ path('app_logout') }}" class="flex items-center space-x-3 px-4 py-3 text-red-400 hover:bg-red-500/10 rounded-xl transition-all duration-300">
                                <i data-lucide="log-out" class="w-5 h-5"></i>
                                <span>Logout</span>
                            </a>
                        </nav>
                    </div>
                </div>

                <!-- Profile Details -->
                <div class="lg:col-span-2">
                    <div class="bg-gray-900/80 backdrop-blur-xl rounded-3xl p-8 border border-gray-800 shadow-2xl">
                        <!-- Flash Messages -->
                        {% for message in app.flashes('success') %}
                            <div class="bg-green-500/20 border border-green-500/50 text-green-300 px-4 py-3 rounded-xl mb-6">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <h2 class="text-2xl font-bold text-white mb-6">Profile Information</h2>

                        <!-- Personal Information -->
                        <div class="space-y-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">First Name</label>
                                    <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                        {{ user.firstName }}
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Last Name</label>
                                    <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                        {{ user.lastName }}
                                    </div>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Email Address</label>
                                    <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                        {{ user.email }}
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Mobile Number</label>
                                    <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                        +91 {{ user.mobile }}
                                    </div>
                                </div>
                            </div>

                            <!-- Delivery Address -->
                            <div class="pt-6 border-t border-gray-700">
                                <h3 class="text-xl font-semibold text-white mb-4 flex items-center">
                                    <i data-lucide="map-pin" class="w-5 h-5 mr-2 text-neon-green"></i>
                                    Delivery Address
                                </h3>

                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-400 mb-2">Street Address</label>
                                        <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                            {{ user.streetAddress }}
                                        </div>
                                    </div>

                                    {% if user.landmark %}
                                    <div>
                                        <label class="block text-sm font-medium text-gray-400 mb-2">Landmark</label>
                                        <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                            {{ user.landmark }}
                                        </div>
                                    </div>
                                    {% endif %}

                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-400 mb-2">City</label>
                                            <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                                {{ user.city }}
                                            </div>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-400 mb-2">State</label>
                                            <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                                {{ user.state }}
                                            </div>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-400 mb-2">Postal Code</label>
                                            <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                                {{ user.postalCode }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="bg-gray-800/30 border border-gray-700 rounded-xl p-4">
                                        <h4 class="text-sm font-medium text-gray-400 mb-2">Complete Address</h4>
                                        <p class="text-white">{{ user.formattedAddress }}</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Account Information -->
                            <div class="pt-6 border-t border-gray-700">
                                <h3 class="text-xl font-semibold text-white mb-4 flex items-center">
                                    <i data-lucide="info" class="w-5 h-5 mr-2 text-neon-blue"></i>
                                    Account Information
                                </h3>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-400 mb-2">Member Since</label>
                                        <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white">
                                            {{ user.createdAt|date('F j, Y') }}
                                        </div>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-400 mb-2">Account Status</label>
                                        <div class="px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white flex items-center">
                                            {% if user.isVerified %}
                                                <i data-lucide="check-circle" class="w-5 h-5 text-green-400 mr-2"></i>
                                                <span class="text-green-400">Verified</span>
                                            {% else %}
                                                <i data-lucide="alert-circle" class="w-5 h-5 text-yellow-400 mr-2"></i>
                                                <span class="text-yellow-400">Pending Verification</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="pt-6 border-t border-gray-700">
                                <div class="flex flex-col sm:flex-row gap-4">
                                    <a href="{{ path('app_profile_edit') }}" class="flex-1 py-3 px-6 bg-gradient-to-r from-purple-500 to-neon-green rounded-xl text-black font-bold text-center hover:shadow-lg hover:shadow-purple-500/25 transition-all duration-300 transform hover:scale-105">
                                        <span class="flex items-center justify-center space-x-2">
                                            <i data-lucide="edit" class="w-5 h-5"></i>
                                            <span>Edit Profile</span>
                                        </span>
                                    </a>
                                    <a href="{{ path('app_profile_orders') }}" class="flex-1 py-3 px-6 bg-gray-800/50 border border-gray-700 rounded-xl text-white font-medium text-center hover:bg-gray-700/50 transition-all duration-300">
                                        <span class="flex items-center justify-center space-x-2">
                                            <i data-lucide="package" class="w-5 h-5"></i>
                                            <span>View Orders</span>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Lucide icons
    lucide.createIcons();
});
</script>
{% endblock %}
