{% extends 'base.html.twig' %}

{% block title %}Edit Profile - {{ user.fullName }} | B2Battle{% endblock %}

{% block body %}
<!-- Profile Edit Header -->
<section class="py-16 relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-r from-neon-green/10 via-transparent to-purple-500/10"></div>
    <div class="absolute top-0 right-1/4 w-64 h-64 bg-neon-green/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-0 left-1/4 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
    
    <div class="container mx-auto px-4 relative z-10">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-neon-green to-purple-400 bg-clip-text text-transparent mb-4">
                Edit Profile
            </h1>
            <p class="text-xl text-gray-300">
                Update your information and delivery details
            </p>
        </div>

        <!-- Profile Edit Content -->
        <div class="max-w-4xl mx-auto">
            <div class="bg-gray-900/80 backdrop-blur-xl rounded-3xl p-8 border border-gray-800 shadow-2xl">
                {{ form_start(profileForm, {'attr': {'class': 'space-y-6'}}) }}
                
                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="bg-green-500/20 border border-green-500/50 text-green-300 px-4 py-3 rounded-xl">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="bg-red-500/20 border border-red-500/50 text-red-300 px-4 py-3 rounded-xl">
                        {{ message }}
                    </div>
                {% endfor %}

                <!-- Personal Information -->
                <div class="space-y-6">
                    <h3 class="text-xl font-semibold text-white mb-4 flex items-center">
                        <i data-lucide="user" class="w-5 h-5 mr-2 text-neon-green"></i>
                        Personal Information
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(profileForm.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                            {{ form_widget(profileForm.firstName) }}
                            {{ form_errors(profileForm.firstName) }}
                        </div>
                        <div>
                            {{ form_label(profileForm.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                            {{ form_widget(profileForm.lastName) }}
                            {{ form_errors(profileForm.lastName) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(profileForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(profileForm.email) }}
                        {{ form_errors(profileForm.email) }}
                    </div>

                    <div>
                        {{ form_label(profileForm.mobile, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(profileForm.mobile) }}
                        {{ form_errors(profileForm.mobile) }}
                    </div>
                </div>

                <!-- Delivery Address -->
                <div class="space-y-6 pt-6 border-t border-gray-700">
                    <h3 class="text-xl font-semibold text-white mb-4 flex items-center">
                        <i data-lucide="map-pin" class="w-5 h-5 mr-2 text-neon-blue"></i>
                        Delivery Address
                    </h3>

                    <div>
                        {{ form_label(profileForm.streetAddress, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(profileForm.streetAddress) }}
                        {{ form_errors(profileForm.streetAddress) }}
                    </div>

                    <div>
                        {{ form_label(profileForm.landmark, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(profileForm.landmark) }}
                        {{ form_errors(profileForm.landmark) }}
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(profileForm.city, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                            {{ form_widget(profileForm.city) }}
                            {{ form_errors(profileForm.city) }}
                        </div>
                        <div>
                            {{ form_label(profileForm.state, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                            {{ form_widget(profileForm.state) }}
                            {{ form_errors(profileForm.state) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(profileForm.postalCode, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(profileForm.postalCode) }}
                        {{ form_errors(profileForm.postalCode) }}
                    </div>
                </div>

                <!-- Password Change -->
                <div class="space-y-6 pt-6 border-t border-gray-700">
                    <h3 class="text-xl font-semibold text-white mb-4 flex items-center">
                        <i data-lucide="shield" class="w-5 h-5 mr-2 text-yellow-400"></i>
                        Change Password (Optional)
                    </h3>

                    <div>
                        {{ form_label(profileForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(profileForm.plainPassword.first) }}
                        {{ form_errors(profileForm.plainPassword.first) }}
                    </div>

                    <div>
                        {{ form_label(profileForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(profileForm.plainPassword.second) }}
                        {{ form_errors(profileForm.plainPassword.second) }}
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="pt-6 border-t border-gray-700">
                    <div class="flex flex-col sm:flex-row gap-4">
                        <button type="submit" class="flex-1 py-4 bg-gradient-to-r from-neon-green to-neon-blue rounded-2xl text-black font-bold text-lg hover:shadow-lg hover:shadow-neon-green/25 transition-all duration-300 transform hover:scale-105">
                            <span class="flex items-center justify-center space-x-3">
                                <i data-lucide="save" class="w-6 h-6"></i>
                                <span>Save Changes</span>
                            </span>
                        </button>
                        <a href="{{ path('app_profile') }}" class="flex-1 py-4 bg-gray-800/50 border border-gray-700 rounded-2xl text-white font-medium text-lg text-center hover:bg-gray-700/50 transition-all duration-300">
                            <span class="flex items-center justify-center space-x-3">
                                <i data-lucide="x" class="w-6 h-6"></i>
                                <span>Cancel</span>
                            </span>
                        </a>
                    </div>
                </div>

                {{ form_end(profileForm) }}
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Lucide icons
    lucide.createIcons();
    
    // Form validation enhancements
    const form = document.querySelector('form');
    const inputs = form.querySelectorAll('input, select, textarea');
    
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            if (this.value.trim() !== '') {
                this.classList.add('border-neon-green/50');
                this.classList.remove('border-gray-700');
            } else {
                this.classList.remove('border-neon-green/50');
                this.classList.add('border-gray-700');
            }
        });
    });
    
    // Mobile number validation
    const mobileInput = document.querySelector('input[name="profile_form[mobile]"]');
    if (mobileInput) {
        mobileInput.addEventListener('input', function() {
            this.value = this.value.replace(/\D/g, '').substring(0, 10);
        });
    }
    
    // Postal code validation
    const postalInput = document.querySelector('input[name="profile_form[postalCode]"]');
    if (postalInput) {
        postalInput.addEventListener('input', function() {
            this.value = this.value.replace(/\D/g, '').substring(0, 6);
        });
    }
});
</script>
{% endblock %}
